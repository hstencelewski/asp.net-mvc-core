@model Project.Models.GameOfferViewModels.CreateGameOfferViewModel
@{
    ViewData["Title"] = "Create - Game Offer";
}

<h3>@ViewData["Title"]</h3>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="GameCategoryId" class="control-label"></label>
                <select class="form-control" asp-for="GameCategoryId"
                        asp-items="@(new SelectList(@Model.GameCategories, "GameCategoryId", "Name"))">
                </select>
                <span asp-validation-for="GameCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameTypeId" class="control-label"></label>
                <select class="form-control" asp-for="GameTypeId"
                        asp-items="@(new SelectList(@Model.GameTypes, "GameTypeId", "Name"))">
                </select>
                <span asp-validation-for="GameTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success btn-sm"/>
                <a asp-action="Index" class="btn btn-default btn-sm">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
